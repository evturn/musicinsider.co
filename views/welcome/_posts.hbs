{{#each posts}}
<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 text-center episode-post">
  <div class="img-episode">
    <img src="assets/img/blog_01.jpg" class="img-responsive">
    <div class="magnifier">
      <a href="/blog/{{this._id}}"><h3>Listen</h3></a>
    </div>
  </div>
  <div class="episode-info">
    <a href="/blog/{{this._id}}"><h3 class="episode-title">{{this.title}}</h3></a>
    <p class="episode-caption">{{this.body}}</p>
  </div>
</div>
{{/each}}