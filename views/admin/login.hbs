<div class="container-fluid login">
  <div class="container">
    <div class="row">
      <div class="section-title">
        <h2>Music Insider | Login</h2>
        <p>{{message}}</p>
      </div>
      <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-12">
        <form action="/admin/login" method="post" class="form-horizontal wow fadeInDown">  
          <div class="form-group">
            <input class="form-control" type="username" name="username" placeholder="Username">
          </div>
          <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-default btn-lg btn-general btn-form-admin-login">
          </div>
          <div class="text-center error"></div>
        </form>
      </div>
    </div>
  </div>
</div>

  <form action="/admin" method="post" id="form-register">
    <h2>Sign Up!</h2>
    <div class="form-group">
      <label>Full Name</label>
      <input type="text" name="name" class="form-control name-register" autofocus>
    </div>
    <div class="form-group">
      <label>Username</label>
      <input type="text" name="username" class="form-control username-register">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name="password" class="form-control password-register">
    </div>
    <div class="form-group">
      <button type="submit" class="form-control btn btn-default btn-register">SIGN UP</button>
    </div>
  </form>
  <p class="form-error">{{ message }}</p>