<div class="container admin-edit">
  <div class="row">
    <div class="section-title text-center">
      <h2>Edit Post</h2>
    </div>
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
      <form class="form-horizontal">
        <div class="form-group">
          <input name="title" type="text" class="form-control admin-input" value="{{post.title}}">  
        </div>
        <div class="form-group">
          <textarea name="body" class="form-control admin-input" rows="10">{{post.body}}</textarea> 
        </div>
        <div class="form-group">
          <button method="put" type="submit" class="btn-red">Update</button>
        </div>            
        <div class="form-group">
          <button method="delete" type="submit" class="btn-red">Delete</button>
        </div>
      </form>
    </div>
  </div>
</div>