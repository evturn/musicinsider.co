<div class="container blog-posts">
  <div class="row">
    <div class="section-title text-center">
      <h1><span class="font-backend">B</span> Blog</h1>
    </div>
    {{#each posts}}
    <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 blog-item">
      <div class="blog-header">
        <span class="pull-right"><p>{{this.createdAt}}</p></span>
        <a href="/blog/{{this._id}}"><h2>{{this.title}}</h2></a>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 blog-body">
        <p class="lead">{{this.body}}</p>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 blog-img">
        <img class="img-responsive" src="assets/img/mi-logo-800.png">
      </div>
    </div>
    {{/each}}
  </div>
</div>